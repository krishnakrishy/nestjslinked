// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  userName  String   @unique
  email     String   @unique
  password  String
  mobile    String      @unique
  profile   Profile?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Profile {
  id             String           @id @default(cuid())
  fullName       String
  qualification  String
  skills         String[]
  experience     String
  location       String
  jobApplication JobApplication[]
  type           Recruiter?       @relation(fields: [recruiterId], references: [id])
  recruiterId    String?          @unique
  user           User?            @relation(fields: [userId], references: [id])
  userId         String?          @unique
  job            Job[]
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now())
}

model Recruiter {
  id          String   @id @default(cuid())
  role        String
  companyName String
  profile     Profile?
}

model Job {
  id             String           @id @default(cuid())
  title          String
  companyName    String
  date           String
  description    String
  opening        String
  location       String
  salary         String
  lastDate       String
  skill          String
  experience     String
  createdBy      Profile?         @relation(fields: [profileId], references: [id])
  profileId      String?
  jobApplication JobApplication[]
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now())
}

model JobApplication {
  id                   String   @id @default(cuid())
  currentuserProfileid String?
  appliedJob           Job?     @relation(fields: [jobId], references: [id])
  jobId                String?
  appliedBy            Profile? @relation(fields: [profileId], references: [id])
  profileId            String?
  status               String?
  isActive             Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @default(now())
}
