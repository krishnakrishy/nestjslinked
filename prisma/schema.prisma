// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(cuid())
  userName  String   @unique
  email     String   @unique
  password  String
  mobile    String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model profile {
  id            String           @id @default(cuid())
  fullName      String
  qualification String
  skills        String[]
  experience    String
  location      String
  jobapplic     jobApplication[]
  type          recruiter?       @relation(fields: [recruiterId], references: [id])
  recruiterId   String?          @unique
  
  isActive      Boolean          @default(true)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @default(now())
  job           job[]
}

model recruiter {
  id          String   @id @default(cuid())
  role        String
  companyName String
  profile     profile?
}

model job {
  id          String           @id @default(cuid())
  title       String
  companyName String
  date        String
  description String
  opening     String
  location    String
  salary      String
  lastDate    String
  skill       String
  experience  String
  createdBy   profile?         @relation(fields: [profileId], references: [id])
  profileId   String?
  jobapplic   jobApplication[]
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @default(now())
}

model jobApplication {
  id         String   @id @default(cuid())
  curproId   String?
  appliedJob job?     @relation(fields: [jobId], references: [id])
  jobId      String?
  appliedBy  profile? @relation(fields: [profileId], references: [id])
  profileId  String?
  status     String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

